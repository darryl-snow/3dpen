// Interaction

ActiveFocusHover()
	&.active
	&:active,
	&:focus,
	&:hover
		{block}

// Layout

clear()
	clear 						both

clearfix()
	*zoom						1

	&:before,
	&:after
		content					""
		display					table

	&:after
		clear					both

.group
	clearfix()

// Typography

inline-list()
	li
		display					inline-block
		margin-left				-4px

unstyled-list()
	list-style					none
	margin						0
	padding						0