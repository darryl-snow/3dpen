// Interaction

ActiveFocusHover()
	&.active
	&:active,
	&:focus,
	&:hover
		{block}

// Layout

absolute()
	position					absolute

bp($bp, $min-max = "min-width")

	$em = $bp / $base-font-size

	@media ({$min-max}: unit($em, em))
		{block}

clear()
	clear 						both

clearfix()
	*zoom						1

	&:before,
	&:after
		content					""
		display					table

	&:after
		clear					both

fixed()
	position					fixed

fl()
	float						left

fr()
	float						right

horizontal-centre()
	position					relative
	left						50%
	transform					translateX(-50%)

relative()
	position					relative

vertical-centre()
	position					relative
	top							50%
	transform					translateY(-50%)

// Typography

inline-list()
	li
		display					inline-block
		margin-left				-4px

unstyled-list()
	list-style					none
	margin						0
	padding						0