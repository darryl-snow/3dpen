.o-button
	relative()
	background					rgba($white, 0.75)
	border						none
	border-radius				0.3rem
	cursor						pointer
	display						inline-block
	font-family					$body-font
	font-size					0.8rem
	font-weight					400
	padding						0.3 * $base-spacing-unit 1.875em
	text-align					center
	text-decoration				none
	text-shadow					none
	// text-transform				uppercase
	transition					$fast-transition

	+ActiveFocusHover()
		background				rgba($white, 0.9)

	+bp($screen-lg-min)
		padding					0.3 * $base-spacing-unit 2.5em

	&:disabled
		cursor					not-allowed
		opacity					0.5

	&--primary
		background				rgba($blue, 0.5)
		color					$white

		+ActiveFocusHover()
			background			rgba($blue, 0.9)
			color				$white

	&--large
		font-size				1rem