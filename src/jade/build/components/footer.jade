.c-footer

	p.c-footer__about!=copy.index.footer.about

	ul.c-footer__links

		li.c-footer__links__item
			a.c-footer__links__item__link(href="#{copy.misc.language}/presspack", title="#{copy.index.footer.links.link1.title}")!=copy.index.footer.links.link1.content

		li.c-footer__links__item
			a.c-footer__links__item__link(href="#{copy.misc.language}/warranty", title="#{copy.index.footer.links.link2.title}")!=copy.index.footer.links.link2.content

		li.c-footer__links__item
			a.c-footer__links__item__link(href="mailto:hello@3dpen.com", title="#{copy.index.footer.links.link3.title}")!=copy.index.footer.links.link3.content

	ul.c-footer__social-links

		li.c-footer__social-links__item
			a.c-footer__social-links__item__link(href="#{copy.misc.socialLinks.socialLink1.href}", title="#{copy.misc.socialLinks.socialLink1.title}")
				svg.o-icon(class="o-icon__#{copy.misc.socialLinks.socialLink1.name}", viewBox="0 0 32 32")
					use(xlink:href="#icon__#{copy.misc.socialLinks.socialLink1.name}")

		li.c-footer__social-links__item
			a.c-footer__social-links__item__link(href="#{copy.misc.socialLinks.socialLink2.href}", title="#{copy.misc.socialLinks.socialLink2.title}")
				svg.o-icon(class="o-icon__#{copy.misc.socialLinks.socialLink2.name}", viewBox="0 0 32 32")
					use(xlink:href="#icon__#{copy.misc.socialLinks.socialLink2.name}")

		li.c-footer__social-links__item
			a.c-footer__social-links__item__link(href="#{copy.misc.socialLinks.socialLink3.href}", title="#{copy.misc.socialLinks.socialLink3.title}")
				svg.o-icon(class="o-icon__#{copy.misc.socialLinks.socialLink3.name}", viewBox="0 0 32 32")
					use(xlink:href="#icon__#{copy.misc.socialLinks.socialLink3.name}")

	.c-footer__mailing-list

		h3.c-footer__mailing-list__title!=copy.index.footer.mailingList.title
			.subheading!=copy.index.footer.mailingList.subheading

		form.o-form(action="/", name="mailing-list-signup", method="post")

			label.o-form__label(for="email")!=copy.index.footer.mailingList.label
			input#email.o-form__input.c-footer__mailing-list__input(name="email", placeholder="#{copy.index.footer.mailingList.placeholder}", type="email")
			input.o-button.c-footer__mailing-list__button(type="submit", value="#{copy.index.footer.mailingList.button}")

	.c-footer__language-changer

		select.o-form__select.c-footer__language-changer__select.js-language-changer
			option(value="")!=copy.index.footer.changeLanguage
			option(value="en-gb") English
			option(value="zh-cn") 中文（简体）

	.c-footer__copyright(role="contentinfo")!=copy.index.footer.copyright